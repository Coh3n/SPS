program spsTest;
{$DEFINE SMART}
{$i srl/srl.scar}
{$i sps/sps.simba}

var
  t: integer;
  pts: TPointArray;
begin
  smart_server := 1;
  smart_members := false;
  smart_signed := true;
  smart_superDetail := false;

  clearDebug();
  setupSRL();

  SPS_Debug := true;


  SPS_Setup(DWARVEN_MINE, ['0_1']);
  pts := [Point(278, 506), Point(329, 509), Point(359, 489), Point(392, 483)];

  repeat
    inc(t);

    if (SPS_WalkPath(pts)) then
      writeLn(format('Walked %d times', [t]));

    invertTPA(pts);
  until(t = 50);

  SPS_GetMyPos();
end.
