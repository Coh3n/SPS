program spsTest;
{$DEFINE SMART}
{$i srl/srl.scar}
{$i sps/sps.simba}

var
  t: integer;
  pts: TPointArray;
begin
  smart_server := 152;
  smart_members := false;
  smart_signed := true;
  smart_superDetail := false;

  clearDebug();
  setupSRL();

  SPS_Debug := true;
  SPS_Setup('essence_mine', ['0_1']);

  // not a real path, just using as an example
  pts := [ point(298, 191), point(266, 223), point(248, 243),
           point(267, 273), point(300, 295) ];
  repeat
    inc(t);

    if (SPS_WalkPath(pts)) then
      writeLn(format('Walked %d times', [t]));

    invertTPA(pts);
  until(t = 50);
end.
